{{>layouts/header}}
<link rel="stylesheet" href="/css/edit.css">

<form class="community-form" action="/community/edit/{{community.id}}" method="post">
    {{#community}}
        <!-- id 값 hidden 전송 -->
        <input type="hidden" name="id" value="{{id}}">

        <div class="mb-3">
            <label for="title">제목 수정</label>
            <input name="title" value="{{title}}" required />
        </div>

        <div class="mb-3">
            <label for="content">내용 수정</label>
            <textarea name="content" rows="5" required>{{content}}</textarea>
        </div>

        <button type="submit" class="btn-submit">수정하기</button>
        <a href="/community" class="btn-backList">돌아가기</a>
    {{/community}}
</form>